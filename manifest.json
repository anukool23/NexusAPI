{
  "manifest_version": 3,
  "name": "NexusAPI",
  "description": "Lightweight API tester in the Chrome popup - send requests and view responses.",
  "version": "1.1.0",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["storage"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  }
}